<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.shy.campusassistant.mapper.UserMapper">

    <select id="selectByPhone" resultType="top.shy.campusassistant.entity.User">
        SELECT *
        FROM user
        WHERE phone = #{phone}
          AND deleted = 0
    </select>

</mapper>
